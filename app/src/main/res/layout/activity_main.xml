<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.project_android.DrawingView
        android:id="@+id/drawing_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/toolsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/toolsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/colorButtonsLayout">

        <ImageButton
            android:id="@+id/brushButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:src="@drawable/brush"
            android:contentDescription="Pinceau" />

        <ImageButton
            android:id="@+id/pencilButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:src="@drawable/pencil"
            android:contentDescription="Crayon" />

        <ImageButton
            android:id="@+id/fillButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:src="@drawable/paint_bucket"
            android:contentDescription="Remplir" />

        <ImageButton
            android:id="@+id/templateButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:src="@drawable/template"
            android:contentDescription="Templates" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/colorButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- First row of colors -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/redButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/circle_button"
                android:backgroundTint="#FF0000"
                android:contentDescription="Rouge" />

            <ImageButton
                android:id="@+id/pinkButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/circle_button"
                android:backgroundTint="#FF69B4"
                android:contentDescription="Rose" />

            <ImageButton
                android:id="@+id/orangeButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/circle_button"
                android:backgroundTint="#FFA500"
                android:contentDescription="Orange" />

            <ImageButton
                android:id="@+id/yellowButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/circle_button"
                android:backgroundTint="#FFFF00"
                android:contentDescription="Jaune" />

            <ImageButton
                android:id="@+id/greenButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/circle_button"
                android:backgroundTint="#00FF00"
                android:contentDescription="Vert" />

            <ImageButton
                android:id="@+id/lightBlueButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/circle_button"
                android:backgroundTint="#87CEEB"
                android:contentDescription="Bleu clair" />

            <ImageButton
                android:id="@+id/colorPickerButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/circle_button"
                android:src="@drawable/ic_color_picker"
                android:contentDescription="Choisir une couleur" />
        </LinearLayout>

        <!-- Second row of colors -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/blueButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/circle_button"
                android:backgroundTint="#0000FF"
                android:contentDescription="Bleu" />

            <ImageButton
                android:id="@+id/purpleButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/circle_button"
                android:backgroundTint="#800080"
                android:contentDescription="Violet" />

            <ImageButton
                android:id="@+id/brownButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/circle_button"
                android:backgroundTint="#8B4513"
                android:contentDescription="Marron" />

            <ImageButton
                android:id="@+id/greyButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/circle_button"
                android:backgroundTint="#808080"
                android:contentDescription="Gris" />

            <ImageButton
                android:id="@+id/blackButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/circle_button"
                android:backgroundTint="#000000"
                android:contentDescription="Noir" />

            <ImageButton
                android:id="@+id/whiteButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@drawable/circle_button"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="Blanc" />
        </LinearLayout>

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@drawable/save"
                android:contentDescription="Sauvegarder" />

            <ImageButton
                android:id="@+id/clearButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@drawable/eraser"
                android:contentDescription="Effacer" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>